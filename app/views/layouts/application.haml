!!! Strict

%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title 数字值班室
    =stylesheet_link_tag "core", "facebox", "default"
    =javascript_include_tag "prototype", "jquery", "facebox", "application" 
    =calendar_date_select_includes "blue"

  %body
    #container
      #header.clear
        %ul#sec-nav
        #titles
          %h1
            %strong#account-name
              %a{:href=>"/"} LH
            %a.pname{:href=>"/"}
              %b 数字值班室
        #rheader
          #userbadge
            .ubody
              #ublinks
                =link_to "退出", logout_path
                =link_to "修改密码", pass_path, :rel => "facebox"
              %strong
                %a="欢迎您:#{current_user.login}"

      #content
        #main
          #project-nav
            %ul
              %li#t-proj{:class=>"#{select_menu('workitems')}"}
                =link_to '待办事项', workitems_path
              - if is_admin?
                %li{:class=>"#{select_menu('users')}"}
                  =link_to '用户管理', new_user_path
              %li#t-menu.mainmenu{:class=>"#{select_menu('calls')}"}
                -link_to new_call_path do
                  来电管理
                  %em more
                %ul.submenu.wbadges{:style=>"display:none"}
                  %li.bin.shared
                    =link_to '新增来电', new_call_path
                  %li.bin.shared
                    =link_to '查询来电', calls_path
              %li#d-menu.mainmenu{:class=>"#{select_menu('departments')}"}
                -link_to new_department_path do
                  机构管理
                  %em more
                %ul.submenu.wbadges{:style=>"display:none"}
                  %li.bin.shared
                    =link_to '新增机构', new_department_path
                  %li.bin.shared
                    =link_to '查询机构', departments_path
              %li#p-menu.mainmenu{:class=>"#{select_menu('personal')}"}
                -link_to custom_path do
                  个人设置
                  %em more
                %ul.submenu.wbadges{:style=>"display:none"}
                  %li.bin.shared
                    =link_to '个人设置', new_department_path
                  %li.bin.shared
                    =link_to '修改密码', departments_path
              %li
                =link_to '新增来访', new_user_path
              %li
                =link_to '新增来信', new_user_path
              %li
                =link_to '新增来函', new_user_path
              %li{:class=>"#{select_menu('dispatches')}"}
                =link_to '事件调度', dispatches_path
          #action-nav
            %ul.clear
              -if is_menu("calls")
                %li=link_to '新增来电', new_call_path
                %li=link_to '查询来电', calls_path
              -elsif is_menu("departments")
                %li=link_to '新增机构', new_department_path
                %li=link_to '查询机构', departments_path
          -flash.each do |key, msg|
            =content_tag :div, msg, :id => "flash-#{key}"
          #main-content
            =yield
        #sbar
          #shared-bin-block.sblock.bin-block
            %h3 指标项
            %ul#shared-ticket-bins.stacked.wbadges.sortable
              %li.bin.shared
                %a{:href=>"/"}
                  %span.badge 60
                  未处理
              %li.bin.shared
                %a{:href=>"/"}
                  %span.badge 160
                  已处理
      #footer
        #footer-cnt
          %p 高正软件
    
