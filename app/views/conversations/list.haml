#mainbar
  .group
    -form_tag searches_path, :method=>:get do
      #quick-search-bar
        =label_tag :phone, '联系电话'
        =text_field_tag :phone, params[:phone], :is_focus => true
        =submit_tag '查询'
    .group
      %table.list
        %tr
          %th 事件编号
          %th 事件主题
          %th 登记时间
          %th 登记人
          %th 操作
        - @list.each do |conversation|
          %tr
            %td=conversation.tag
            %td=conversation.title
            %td=conversation.created_at.to_s(:without_year)
            %td=conversation.creator.realname
            %td=link_to '查看', conversation_path(conversation)
      #paginate
        =will_paginate @list
#sbar
  .proj-desc
    %p 所有事件可以在这里查询到
    %p 可进行的操作:
    %ul#shared-ticket-bins.stacked.wbadges.sortable
      %li 
        %a 查看:进入事件的详细信息页面,包括往来记录和办理过程
