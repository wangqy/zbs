.group
  %fieldset
    %legend 查询条件
    #quick-search-bar
      -form_tag departments_path, :method=>:get do
        =label_tag "department[code]", '机构代码'
        =text_field_tag "department[code]", params[:department][:code]
        =label_tag "department[name]", '机构名称'
        =text_field_tag "department[name]", params[:department][:name]
        =submit_tag '查询'
.group
  %fieldset
    %legend 机构列表
    %table.list
      %tr
        %th{:width=>"120"} 机构代码
        %th{:width=>"120"} 机构名称
        %th{:width=>"100"} 负责人
        %th{:width=>"150"}联系电话
        %th 地址
        %th{:width=>"160"} 最后修改时间
        %th{:width=>"120"} 操作
      - @list.each do |department|
        %tr
          %td=department.code
          %td=department.name
          %td=department.manager
          %td=department.telephone
          %td=department.address
          %td=department.updated_at.to_s(:full)
          %td
            =link_to t('html.link.view'), department
            =link_to t('html.link.edit'), edit_department_path(department)
            =link_to t('html.link.delete'), department, :confirm => "你确定要删除吗?", :method => :delete
    #pagination
      =will_paginate @list

