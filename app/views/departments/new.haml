.group
  =error_messages_for :department
  -form_for @department, :html => {:class=>'formin'} do |f|
    %fieldset
      %legend 机构信息
      %table
        %tr
          %th
            = f.label :code, "机构代码"
            = require_star
          %td
            = f.text_field :code, :maxlength=>10,:is_focus => true
          %th
            = f.label :fax, "传真"
          %td
            = f.text_field :fax
          %td.last &nbsp;
        %tr
          %th
            = f.label :name, "机构名称"
            = require_star
          %td
            = f.text_field :name
          %th
            = f.label :email, "电子邮件"
          %td
            = f.text_field :email
          %td.last &nbsp;
        %tr
          %th
            = f.label :manager, "负责人"
          %td
            = f.text_field :manager
          %th
            = f.label :telephone, "联系电话"
          %td
            = f.text_field :telephone
          %td.last &nbsp;
        %tr
          %th
            = f.label :address, "地址"
          %td{:colspan=>3}
            = f.text_field :address
          %td.last &nbsp;
        %tr
          %th
            = f.label :remark, "备注"
          %td{:colspan=>3}
            = f.text_area :remark, :rows => 5, :cols=> 70
          %td.last &nbsp;
    %p.btns{:style=>"clear:left"}
      -unless !@department.id.nil?
        = submit_tag t('html.button.save'), :disable_with => t('html.saving') 
      = submit_tag t('html.button.back'), :disable_with => t('html.saving')

