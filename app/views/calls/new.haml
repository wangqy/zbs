.group
  %fieldset
    %legend 新增来电
    =error_messages_for :call
    -form_for @call do |f|
      %table.formin
        %tr
          %th
            = f.label 'phone', "来电电话"
          %td
            = f.text_field 'phone', :is_focus => true
          %th
            = f.label 'timing', "来电时间"
          %td
            = f.text_field 'timing'
        %tr
          %th
            = f.label 'name', "来电人姓名"
          %td
            = f.text_field 'name'
          %th
            = f.label 'aim', "来电目的"
          %td
            = f.select 'aim'
        %tr
          %th
            = f.label :emergency, "紧急程度"
          %td
            = f.select :emergency
          %th
            = f.label :security, "保密程度"
          %td
            = f.select :security
        %tr
          %th
            = f.label :title, "来电主题"
          %td{:colspan=>3}
            = f.text_field :title
        %tr
          %th
            = f.label :content, "内容摘要"
          %td{:colspan=>3}
            = f.text_area :content
        %tr
          %th
            = f.label :kind, "事件分类"
          %td{:colspan=>3}
            = f.select :kind
        %tr
          %td{:colspan=>4} 来电人详细信息
        %tr
          %th
            = f.label :sex, "性别"
          %td
            = f.select :sex
          %th
            = f.label :phone, "联系电话"
          %td
            = f.text_field :phone
        %tr
          %th
            = f.label :email, "电子邮箱"
          %td
            = f.text_field :email
          %th
            = f.label :mobile, "手机号码"
          %td
            = f.text_field :mobile
        %tr
          %th
            = f.label :address, "联系地址或单位"
          %td{:colspan=>3}
            = f.text_field :address

      %p.btns{:style=>"clear:left"}
        = submit_tag '保存', :id => "save"

