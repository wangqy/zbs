.group
  =error_messages_for :call
  -form_for @call, :html => {:class=>'formin'} do |f|
    %fieldset
      %legend 来电信息
      %table
        %tr
          %th
            = f.label :callnumber, "来电电话"
          %td
            = f.text_field :callnumber, :is_focus => true
          %th
            = f.label :timing, "来电时间"
          %td
            = f.calendar_date_select "timing", :time => true, :popup => :force
        %tr
          %th
            = f.label :name, "来电人姓名"
          %td
            = f.text_field :name
          %th
            = f.label :aim, "来电目的"
          %td
            = f.select :aim
        %tr
          %th
            = f.label :emergency, "紧急程度"
          %td
            = f.select :emergency
          %th
            = f.label :security, "保密程度"
          %td
            = f.select :security
        %tr
          %th
            = f.label :title, "来电主题"
          %td{:colspan=>3}
            = f.text_field :title
        %tr
          %th
            = f.label :content, "内容摘要"
          %td{:colspan=>3}
            = f.text_area :content, :rows => 5, :cols=> 70
        %tr
          %th
            = f.label :kind, "事件分类"
          %td{:colspan=>3}
            = f.select :kind
    %fieldset
      %legend 来电人详细信息
      %table
        %tr
          %th
            = f.label :sex, "性别"
          %td
            = f.select :sex
          %th
            = f.label :phone, "联系电话"
          %td
            = f.text_field :phone
        %tr
          %th
            = f.label :email, "电子邮箱"
          %td
            = f.text_field :email
          %th
            = f.label :mobile, "手机号码"
          %td
            = f.text_field :mobile
        %tr
          %th
            = f.label :address, "联系地址或单位"
          %td
            = f.text_field :address

    %p.btns{:style=>"clear:left"}
      = submit_tag t('html.button.save'), :disable_with => t('html.saving')
      = submit_tag t('html.button.modify'), :disable_with => t('html.saving')

