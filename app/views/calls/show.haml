#mainbar
  .group
    %fieldset
      %legend 查看来电信息
      %table.formin
        %tr
          %th 来电电话
          %td=@call.callnumber
          %th 来电时间
          %td=@call.timing.to_s(:with_year)
        %tr
          %th 来电人姓名
          %td=@call.name
          %th 来电目的
          %td=@call.aim_enum
        %tr
          %th 紧急程度
          %td=@call.emergency_enum
          %th 保密程度
          %td=@call.security_enum
        %tr
          %th 来电主题
          %td{:colspan=>3}=@call.title
        %tr
          %th 内容摘要
          %td{:colspan=>3}=@call.content
        %tr
          %th 事件分类
          %td{:colspan=>3}=@call.kind_enum
    %fieldset
      %legend 来电人详细信息
      %table.formin
        %tr
          %th 性别
          %td=@call.sex_enum
          %th 联系电话
          %td=@call.phone
        %tr
          %th 电子邮箱
          %td=@call.email
          %th 手机号码
          %td=@call.mobile
        %tr
          %th 联系地址或单位
          %td=@call.address

    %p.btns{:style=>"clear:left"}
      = link_to '返回', :back

=render :partial => "calls/relate"
