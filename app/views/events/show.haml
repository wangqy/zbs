#mainbar
  .group
    %fieldset
      %legend 查看来电信息
      %table.formin
        %tr
          %th 来电电话
          %td=@event.callnumber
          %th 来电时间
          %td=@event.timing.to_s(:with_year)
        %tr
          %th 来电人姓名
          %td=@event.name
          %th 来电目的
          %td=@event.aim_enum
        %tr
          %th 紧急程度
          %td=@event.emergency_enum
          %th 保密程度
          %td=@event.security_enum
        %tr
          %th 来电主题
          %td{:colspan=>3}=@event.title
        %tr
          %th 内容摘要
          %td{:colspan=>3}=@event.content
        %tr
          %th 事件分类
          %td{:colspan=>3}=@event.kind_enum
    %fieldset
      %legend 来电人详细信息
      %table.formin
        %tr
          %th 性别
          %td=@event.sex_enum
          %th 联系电话
          %td=@event.phone
        %tr
          %th 电子邮箱
          %td=@event.email
          %th 手机号码
          %td=@event.mobile
        %tr
          %th 联系地址或单位
          %td=@event.address

    %p.btns{:style=>"clear:left"}
      = link_to '返回', :back

=render :partial => "events/relate"
