#mainbar
  %fieldset
    %legend 编辑用户
    =error_messages_for :user
    -form_for @user do |f|
      =f.hidden_field 'id'
      %table.formin
        %tr
          %th
            %label{:for => 'user_login'} 用户名
            =require_star
          %td
            = f.text_field 'login', :is_focus => true
          %th
            ="&nbsp;"
          %td
            ="&nbsp;"
        %tr
          %th
            %label{:for => 'user_realname'} 姓名
            =require_star
          %td
            = f.text_field 'realname'
          %th
            = f.label :sex, "性别"
          %td
            = f.radio_enum :sex
        %tr
          %th
            = f.label :department_id, "部门"
            =require_star
          %td
            = f.select :department_id, Department.all.collect{|d| [d.name, d.id]}, :include_blank => true
          %th
            = f.label :position, "职位"
          %td
            = f.text_field :position
        %tr
          %th= f.label :role, "角色 #{require_star}"
          %td= f.select :role
          %th= f.label :ismanager, "是否负责人"
          %td{:colspan=>3}= f.check_box :ismanager, {}, "1", "0"
        %tr
          %th
            = f.label :telephone, "办公电话"
            =require_star
          %td
            = f.text_field :telephone
          %th
            = f.label :mobile, "手机"
          %td
            = f.text_field :mobile
        %tr
          %th
            = f.label :email, "电子邮箱"
          %td{:colspan=>3}
            = f.text_field :email
        %tr
          %th
            = f.label :remark, "备注"
          %td{:colspan=>3}
            = f.text_area :remark, :rows => 5, :cols=> 49
      %p.btns{:style=>"clear:left"}
        = submit_tag t('html.button.back'), :disable_with => t('html.saving')

#sbar
  .proj-desc
    %p 
