.group
  %fieldset
    %legend 新增用户
    =error_messages_for :user
    -form_for :user, :url => users_path do |f|
      %table.formin
        %tr
          %th
            %label{:for => 'user_login'} 用户名
          %td
            = f.text_field 'login', :is_focus => true
          %th
            %label{:for => 'user_password'} 密码
          %td
            = f.password_field 'password'
        %tr
          %th
            %label{:for => 'user_realname'} 姓名
          %td
            = f.text_field 'realname'
      %p.btns{:style=>"clear:left"}
        = submit_tag '保存', :id => "save"

.group
  %fieldset
    %legend 用户列表
    %table.list
      %tr
        %th 用户名
        %th 姓名
      - @list.each do |user|
        %tr
          %td=user.login
          %td=user.realname

