-remote_form_for :user, :url => {:action => 'updatesite'}, :html => {:class => 'j-form'} do |f|
  .nav 
    %span 你现在的位置：修改坐席号
  .split
  .j-panel
    .j-panel-head
      .j-panel-text 坐席信息
    .j-panel-body.panel-full
      %div#pop-errorExplanation{:style=>'display:none'}
      %table.j-form-table
        %thead
          %tr
            %th{:width=>"80px"}
            %th{:width=>"300px"}
            %th
        %tbody
          %tr
            %td= f.label_require :site
            %td= f.text_field :site
            %td &nbsp;
    .j-panel-foot
      .j-toolbar
        %ul
          %li{:icon=>"j-icon i-create"}
            =link_to_function "保存", "j('.j-form').trigger('onsubmit')"
