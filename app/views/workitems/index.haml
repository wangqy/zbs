.group
  %table.list
    %tr
      %th 事件编号
      %th 事件主题
      %th 登记时间
      %th 登记人
      %th 状态
      %th 操作
    - @list.each do |conversation|
      %tr
        %td=conversation.tag
        %td=conversation.title
        %td=conversation.created_at.to_s(:without_year)
        %td=conversation.creator.realname
        %td=conversation.state_enum
        %td
          =link_to '处理', edit_workitem_path(:id=>conversation.workitem_id)
          =link_to '添加往来记录', new_event_path('event[conversation_id]' => conversation.id, :category => 'category_out', :menu => :workitems)

