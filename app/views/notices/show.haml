.nav 
  %span 你现在的位置：公告管理 &gt;&gt; 查看公告
.split
.j-panel
  .j-panel-head
    .j-panel-text 公告信息
  .j-panel-body.panel-full
    %table.j-form-table
      %thead
        %tr
          %th{:width=>"80px"}
          %th{:width=>"200px"}
          %th{:width=>"80px"}
          %th{:width=>"200px"}
          %th
      %tbody
        %tr
          %td 标题
          %td{:colspan=>3}= @notice.title
          %td &nbsp;
        %tr
          %td 内容
          %td{:colspan=>3}= @notice.content
          %td &nbsp;
        %tr
          %td 是否发布
          %td{:colspan=>3}= @notice.deployed_enum_sf
          %td &nbsp;
        %tr
          %td 创建人
          %td= @notice.creator.realname
          %td 创建时间
          %td= @notice.created_at.to_s(:full)
          %td &nbsp;
        %tr
          %td 最后修改人
          %td= @notice.modifier.realname
          %td 最后修改时间
          %td= @notice.updated_at.to_s(:full)
          %td &nbsp;
        -if @notice.deployed == 1
          %tr
            %td 发布人
            %td= @notice.deployee.realname
            %td 发布时间
            %td= @notice.deployed_at.to_s(:full)
            %td &nbsp;
  .j-panel-foot
    .j-toolbar
      %ul
        %li{:icon=>"j-icon i-return"}
          = link_to '返回', notices_path
