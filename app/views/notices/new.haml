-form_for @notice, :html => {:class => "j-form"} do |f|
  .nav 
    %span 你现在的位置：公告管理 &gt;&gt; 增加公告
  .split
  .j-panel
    .j-panel-head
      .j-panel-text 公告信息
    .j-panel-body.panel-full
      =flash_msg
      =error_messages_for :user
      %table.j-form-table
        %thead
          %tr
            %th{:width=>"80px"}
            %th{:width=>"400px"}
            %th
        %tbody
          %tr
            %td= f.label_require :title
            %td= f.text_field :title
            %td &nbsp;
          %tr
            %td= f.label_require :content
            %td= f.text_area :content, :rows => 15
            %td &nbsp;
          -if !@notice.errors.empty? || @notice.deployed == 0
            %tr
              %td= f.label :deployed, "是否发布"
              %td= f.check_box(:deployed, {}, "1", "0") + ' 发布后将不可编辑' 
              %td &nbsp;
    .j-panel-foot
      .j-toolbar
        %ul
          %li{:icon=>"j-icon i-create"}
            =submit_tag "保存", :class=> "hide"
            =link_to_function "保存", "j('.j-form').submit()"
          %li
          %li{:icon=>"j-icon i-return"}
            = link_to '返回', notices_path
