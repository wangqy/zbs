#login
  - form_remote_tag :url => session_path do                                                                                                                 
    %p  
      %label 用户名
      = text_field_tag 'login', params[:login], :is_focus => true
    %p  
      %label 密码
      = password_field_tag 'password'
    %p  
      = submit_tag '登录', :class => "button"

