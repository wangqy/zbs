.group
  -form_tag dispatches_path do 
    %fieldset
      %legend 事件信息
      %table.formin
        %tr
          %td{:colspan=>4}=@event.title
        %tr
          %td{:colspan=>3}
          %td=@event.calltag
        %tr
          %th 来电电话
          %td=@event.callnumber
          %th 来电时间
          %td=@event.timing.to_s(:with_year)
        %tr
          %th 来电人姓名
          %td=@event.name
          %th 来电目的
          %td=@event.aim_enum
        %tr
          %th 紧急程度
          %td=@event.emergency_enum
          %th 保密程度
          %td=@event.security_enum
        %tr
          %th 内容摘要
          %td{:colspan=>3}=@event.content
        %tr
          %th 事件分类
          %td{:colspan=>3}=@event.kind_enum
    %fieldset
      %legend 来电人详细信息
      %table.formin
        %tr
          %th 性别
          %td=@event.sex_enum
          %th 联系电话
          %td=@event.phone
        %tr
          %th 电子邮箱
          %td=@event.email
          %th 手机号码
          %td=@event.mobile
        %tr
          %th 联系地址或单位
          %td=@event.address
    %fieldset
      %legend 业务办理
      %table.formin
        %tr
          %th 办理方式
          %td
            =radio_button_tag 'handle', 1
            =label_tag 'handle_1', '转办'
            =radio_button_tag 'handle', 2
            =label_tag 'handle_2', '自己受理'
            =radio_button_tag 'handle', 3
            =label_tag 'handle_3', '直接办结'
          %th 截止日期
          %td=calendar_date_select_tag "finish_date", nil, :popup => :force, :class => 'calendar'

    %p.btns{:style=>"clear:left"}
      = submit_tag '保存', :disable_with => t('html.saving')
      = link_to '返回', :back

